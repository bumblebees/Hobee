<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_user_profile"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="bumblebees.hobee.UserProfileActivity" android:weightSum="1"
              android:background="@color/Bee_color_3">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Bee_color_4"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/profileToolbar"
        android:elevation="4dp" />

    <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="258dp" android:elevation="1dp"
            android:layout_weight="0.09" android:weightSum="1" android:background="@color/Bee_color_4">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp" android:layout_weight="1.62">

            <TextView
                    android:text="@string/name_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userName"
                    android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp" android:textColor="@color/Bee_color_1"/>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                         android:layout_marginTop="20dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/userImage"
                        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:cropToPadding="false" android:minHeight="150dp" android:maxHeight="150dp"
                        android:maxWidth="150dp" android:minWidth="150dp"
                        android:layout_below="@+id/frameLayout" android:layout_centerHorizontal="true"
                        android:layout_margin="4dp"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/frame"
                        android:id="@+id/frame"/>

            </FrameLayout>
            <TextView
                    android:text="33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userAge"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:layout_marginRight="36dp" android:layout_marginEnd="36dp"
                    android:textColor="@color/Bee_color_1" android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
            <ImageView
                    app:srcCompat="@drawable/male"
                    android:id="@+id/userGender"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp" android:layout_width="40dp" android:layout_height="40dp"
                    android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/userEditBtn"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:layout_alignLeft="@+id/userAge"
                android:layout_alignStart="@+id/userAge" />
        </RelativeLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="51dp" android:textAlignment="center" android:background="@color/Bee_color_4"
                android:layout_marginBottom="2dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_gravity="center"
                    android:gravity="center">
                <TextView
                        android:text="+3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/globalRank" android:gravity="center"
                        android:textColor="@color/Bee_color_1" android:textSize="14sp"/>
                <TextView
                        android:text="Global rank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:gravity="center"
                        android:textColor="@color/Bee_color_1" android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <TextView
                        android:text="+1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/hostRank" android:gravity="center"
                        android:textColor="@color/Bee_color_1" android:textSize="14sp"/>
                <TextView
                        android:text="Host rank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8" android:gravity="center"
                        android:textColor="@color/Bee_color_1" android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_gravity="center"
                    android:gravity="center">
                <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/noShows" android:gravity="center"
                        android:textColor="@color/Bee_color_1" android:textSize="14sp"/>
                <TextView
                        android:text="No shows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView10" android:gravity="center"
                        android:textColor="@color/Bee_color_1" android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/Bee_color_1" android:layout_height="2dp">
    </LinearLayout>
    <TextView
            android:text="Hey I like to play the guitar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userBiography" android:layout_centerVertical="true" android:layout_weight="0.71"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingTop="10dp"/>
    <TextView
            android:text="My hobbies:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="0.09"
            android:paddingLeft="20dp" android:gravity="center_vertical"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="55dp" android:layout_gravity="center" android:layout_weight="0.11">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp" android:layout_gravity="left">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/basketball"
                    android:id="@+id/imageView7" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/chess" android:id="@+id/imageView8"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/football" android:id="@+id/imageView9"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/hicking" android:id="@+id/imageView10"
                    android:layout_weight="1"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
