<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_test_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ffe36b"
        tools:context="bumblebees.hobee.TestUser">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lastName" android:hint="Last name" android:layout_below="@+id/firstName"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/pic"
        android:layout_toStartOf="@+id/pic" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
        android:id="@+id/username" android:hint="username"
        android:layout_below="@+id/lastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/pic"
        android:layout_toStartOf="@+id/pic" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
        android:id="@+id/firstName" android:hint="First name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/pic"
        android:layout_toStartOf="@+id/pic" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
        android:id="@+id/email" android:hint="e-mail"
        android:layout_below="@+id/birthdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/pic"
        android:layout_toStartOf="@+id/pic" />

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />

    <ImageButton
        app:srcCompat="@drawable/letsgetstarted"
        android:layout_below="@+id/info"
        android:id="@+id/submitBtn"
        android:background="#0000"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/birthdate" android:hint="birthdate yyyy/mm/dd"
        android:layout_below="@+id/lastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/fbImage"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/submitBtn"
        android:layout_alignStart="@+id/submitBtn"
        android:layout_marginLeft="133dp"
        android:layout_marginStart="133dp" />

    <Button
            android:text="Set photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/selectPicBtn"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"

        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/fbImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
        android:id="@+id/info" android:hint="about yourself"
        android:layout_below="@+id/gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
