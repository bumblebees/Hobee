<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="#ffe36b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bumblebees.hobee.LoginActivity">

    <ImageView

        app:srcCompat="@android:drawable/screen_background_dark_transparent"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:scaleType="fitCenter"
        android:layout_weight="0.12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/userImage"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="My hobbies:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:text="hobbies"
        android:ems="10"
        android:id="@+id/listhobbies"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageView

        app:srcCompat="@drawable/proficons"
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/userName"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:text="Name"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/listhobbies"
        android:layout_alignEnd="@+id/listhobbies"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3">

        <TextView
            android:text="Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userAge"
            android:textSize="14sp"
            android:layout_above="@+id/userEmail"
            android:layout_alignLeft="@+id/listhobbies"
            android:layout_alignStart="@+id/listhobbies"
            android:layout_margin="3dp"
            android:padding="3dp" />

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userEmail"
            android:layout_above="@+id/userGender"
            android:layout_alignLeft="@+id/userAge"
            android:layout_alignStart="@+id/userAge"
            android:layout_margin="3dp"
            android:padding="3dp" />

        <TextView
            android:text="Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userGender"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignRight="@+id/userEmail"
            android:layout_alignEnd="@+id/userEmail"
            android:layout_margin="3dp"
            android:padding="3dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:id="@+id/userBio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Bio" />


</RelativeLayout>
