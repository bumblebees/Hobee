<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hobbies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff8d2"
    tools:context="bumblebees.hobee.hobbycategories.HobbiesActivity">


    <CheckBox
        android:text="Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_tuesday"
        android:layout_below="@+id/checkBox_monday" />

    <CheckBox
        android:text="Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_wednesday"
        android:layout_below="@+id/checkBox_tuesday" />

    <CheckBox
        android:text="Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_thursday"
        android:layout_below="@+id/checkBox_wednesday" />

    <CheckBox
        android:text="Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_friday"
        android:layout_below="@+id/checkBox_thursday" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/globalRank"
        android:layout_alignLeft="@+id/globalRank"
        android:layout_alignStart="@+id/globalRank"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/globalRank"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_above="@+id/spinner_time_to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:text="To"
        android:layout_alignBottom="@+id/spinner_time_to"
        android:layout_alignLeft="@+id/globalRank"
        android:layout_alignStart="@+id/globalRank" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:contentDescription="Name"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp" />

    <TextView
        android:text="Day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noShows"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spinner_difficulty_level"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_difficulty_level"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/button_submit"
        android:layout_alignStart="@+id/button_submit"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <CheckBox
        android:text="Sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_sunday"
        android:layout_below="@+id/checkBox_saturday"
        android:layout_toRightOf="@+id/button_submit"
        android:layout_toEndOf="@+id/button_submit" />

    <CheckBox
        android:text="Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_saturday"
        android:layout_above="@+id/checkBox_tuesday"
        android:layout_alignLeft="@+id/checkBox_sunday"
        android:layout_alignStart="@+id/checkBox_sunday" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_time_from"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/checkBox_friday"
        android:layout_toRightOf="@+id/checkBox_friday"
        android:layout_toEndOf="@+id/checkBox_friday" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_time_to"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/spinner_time_from"
        android:layout_alignLeft="@+id/spinner_time_from"
        android:layout_alignStart="@+id/spinner_time_from" />

    <Button
        android:text="Add hobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_submit"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_monday"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_below="@+id/noShows"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Difficulty Level"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/noShows"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name" />

</RelativeLayout>
