<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_event_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="bumblebees.hobee.EventViewActivity"
              app:layout_collapseParallaxMultiplier="1.0"
              android:weightSum="1"
              android:orientation="vertical" android:background="@drawable/bg_pattern">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/header_pattern"
                    android:layout_weight="1" android:layout_height="50dp">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/eventName"
                        android:layout_weight="1" android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold" android:textColor="@color/Bee_color_4" android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            >

        <TextView
                android:text="Hosted by: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView4" android:paddingLeft="10dp" android:gravity="left|center_vertical"
                android:layout_weight="0" android:textSize="18sp" android:textColor="@color/Bee_color_1"
                android:textStyle="bold"/>

        <TextView
                android:text="Host Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/eventHostName" android:paddingLeft="10dp" android:gravity="left|center_vertical"
                android:layout_weight="1" android:textSize="18sp" android:textColor="@color/Bee_color_1"
                android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Hobby:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Event Hobby"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventHobby"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Location:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Event Location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventLocation"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Date:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Event Date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventDate"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Time:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Event Time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventTime"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Max People:"
                        android:layout_height="match_parent"
                        android:id="@+id/textView31" android:paddingLeft="10dp" android:gravity="left|center_vertical"
                        android:layout_weight="0" android:textSize="18sp" android:textColor="@color/Bee_color_1"
                        android:layout_width="120dp"/>

                <TextView
                        android:text="Event People"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventPeople"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Gender:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Event Gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventGender"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Age:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Event Age Range"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventAge"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_height="30dp">

                <TextView
                        android:text="Skill level:"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="0"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1" android:layout_width="120dp"/>

                <TextView
                        android:text="Skill level"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/eventHobbySkill"
                        android:paddingLeft="10dp" android:gravity="left|center_vertical" android:layout_weight="1"
                        android:textSize="18sp" android:textColor="@color/Bee_color_1"/>

            </LinearLayout>

            <TextView
                    android:text="Event Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventDescription"
                    android:layout_below="@+id/eventName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp" android:layout_weight="1" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:lines="4"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerPending"
                        android:layout_weight="1"
                        android:visibility="gone" android:gravity="left|center_vertical" android:paddingLeft="10dp">

                    <TextView
                            android:text="Pending users:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3" android:layout_weight="1" android:textSize="18sp"
                            android:textColor="@color/Bee_color_1"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerUsers"
                        android:layout_weight="1" android:gravity="left|center_vertical" android:paddingLeft="10dp">
                    <TextView
                            android:text="Participants:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5" android:textSize="18sp" android:textColor="@color/Bee_color_1"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                    android:text="Join Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btnJoinEvent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp" android:layout_marginBottom="20dp" style="@style/HobeeButton"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
