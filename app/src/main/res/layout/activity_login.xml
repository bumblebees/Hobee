<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_test_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_pattern"
        tools:context="bumblebees.hobee.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hobee_name"
        android:adjustViewBounds="true"
        android:maxWidth="105dp"
        android:maxHeight="105dp"
        android:scaleType="fitCenter"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bee"
        android:adjustViewBounds="true"
        android:maxWidth="180dp"
        android:maxHeight="180dp"
        android:scaleType="fitCenter"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_marginBottom="105dp"
            android:layout_alignParentBottom="true" android:layout_alignStart="@+id/imageView2"
            android:layout_height="50dp"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/google_login_button"
            android:layout_width="200dp"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/fb_login_button" android:layout_alignStart="@+id/fb_login_button"
            android:layout_height="40dp"/>


</RelativeLayout>
