<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Bee_color_3"
    tools:context="bumblebees.hobee.RegisterUserActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstName" android:hint="First name"
        android:background="#60FFFFFF"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastName" android:hint="Last name"
        android:layout_below="@+id/firstName" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#60FFFFFF"
        android:padding="10dp"
        android:layout_marginLeft="1dp"
        android:layout_margin="10dp" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_below="@+id/userImage"
        android:layout_alignLeft="@+id/lastName" android:layout_alignStart="@+id/lastName">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male"
            android:checked="false"
            android:layout_alignBottom="@+id/chooseImageBtn"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female" android:checked="false"
            android:layout_alignBaseline="@+id/radioMale"
            android:layout_alignBottom="@+id/radioMale"
            android:layout_alignLeft="@+id/submitBtn"
            android:layout_alignStart="@+id/submitBtn" />
    </RadioGroup>

    <Button
        android:text="@string/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setBirthdayBtn"
        android:layout_alignBaseline="@+id/birthday"
        android:layout_alignBottom="@+id/birthday"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lastName"
        android:layout_alignEnd="@+id/lastName"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/submitBtn" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/termsOfServiceCheckBox"
        android:layout_alignBottom="@+id/termsOfServiceBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/termsOfServiceBtn" />

    <Button
        android:text="I HAVE READ AND ACCEPTED THE TERMS OF SERVICE"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/termsOfServiceBtn"
        android:background="@color/Bee_color_3"
        android:backgroundTint="@color/Bee_color_3"
        android:layout_above="@+id/submitBtn"
        android:layout_toRightOf="@+id/termsOfServiceCheckBox"
        android:layout_toEndOf="@+id/termsOfServiceCheckBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="4"
        android:lines="4"
        android:background="#60FFFFFF"
        android:id="@+id/info" android:hint="Tell us a bit about yourself."
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:layout_above="@+id/termsOfServiceCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email" android:hint="E-mail"
        android:background="#60FFFFFF"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/birthday"
        android:background="#60FFFFFF"
        android:padding="10dp"
        android:text="birthday"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/chooseImageBtn"
        android:layout_toStartOf="@+id/chooseImageBtn" />

    <Button
        android:text="Choose image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseImageBtn"
        android:layout_above="@+id/setBirthdayBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/userImage"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:adjustViewBounds="true"
        android:layout_width="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/chooseImageBtn" />


</RelativeLayout>
