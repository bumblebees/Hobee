<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:layout_width="match_parent"
              android:divider="@color/Bee_color_1"
              android:background="@color/Bee_color_2" android:layout_height="90dp" android:id="@+id/eventItemLayout">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_height="80dp"
                app:srcCompat="?android:attr/listChoiceIndicatorSingle"
                android:id="@+id/eventIcon"
                android:layout_weight="0" android:layout_width="80dp" android:layout_gravity="center_vertical|center_horizontal"
                android:padding="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
            <TextView
                    android:text="Event Name"
                    android:layout_width="match_parent"
                    android:id="@+id/eventName"
                    android:textSize="16sp"
                    android:textColor="@color/Bee_color_1" android:textStyle="bold" android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="01/12/2016"
                    android:layout_width="match_parent"
                    android:id="@+id/eventDate"
                    android:textColor="@color/Bee_color_1" android:layout_weight="1" android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            <TextView
                    android:text="Host"
                    android:layout_width="match_parent"
                    android:id="@+id/eventHost"
                    android:textColor="@color/Bee_color_1" android:layout_weight="1" android:layout_height="wrap_content"
                    android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent" android:layout_weight="0" android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="12:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/eventTime" android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="24sp" android:textColor="@color/Bee_color_1"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/eventPendingCount" android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/frame" android:textSize="14sp"
                    android:textColor="@color/Bee_color_1" android:textStyle="bold" android:paddingLeft="10dp"
                    android:paddingRight="10dp" android:paddingBottom="5dp" android:paddingTop="5dp"
                    android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>